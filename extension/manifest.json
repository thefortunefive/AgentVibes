{
  "manifest_version": 3,
  "name": "AgentVibes Voice",
  "version": "1.0.0",
  "description": "Add voice output to AI chat windows. Speaks ChatGPT, Claude, and Genspark responses aloud using AgentVibes TTS.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://www.claude.ai/*",
        "https://genspark.ai/*",
        "https://www.genspark.ai/*",
        "http://localhost:*/*",
        "https://localhost:*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
